<%- model_class = Aula -%>
<div class="page-header">
  <h3><%= 'Aulas Cadastradas' %></h3>
</div>
<table class="table table-striped">
  <thead>
    <tr>
      <th><%= model_class.human_attribute_name(:professor_id) %></th>
      <th><%= model_class.human_attribute_name(:turma_id) %></th>
      <th><%=t '.actions', :default => t("Cadastro") %></th>
      <th><%=t '.actions', :default => t("Excluir") %></th>
    </tr>
  </thead>
  <tbody>
    <% @aulas.each do |aula| %>
      <tr>
        <td><%= aula.professor.nome %></td>
        <td><%= aula.turma.nome %></td>
        <td>
          <%= link_to t('.edit', :default => t("Editar")),
                      edit_aula_path(aula), :class => 'btn btn-mini' %></td>
        <td>
          <%= link_to t('.destroy', :default => t("Excluir")),
                      aula_path(aula),
                      :method => :delete,
                      :data => { :confirm => t('.confirm', :default => t("Confirma exclusão da aula?", :default => 'Confirma exclusão da aula?')) },
                      :class => 'btn btn-mini btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to t('.new', :default => t("Nova Aula")),
            new_aula_path,
            :class => 'btn btn-success' %>
