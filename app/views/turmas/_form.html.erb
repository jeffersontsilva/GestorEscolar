<%= form_for @turma, :html => { :class => 'form-horizontal' } do |f| %>
  <% if @turma.errors.any? %>
    <div id="error_explanation">
      <h2>Ocorreu <%= pluralize(@turma.errors.count, "erro") %> ao salvar os dados:</h2>

      <ul>
      <% @turma.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
  <div class="control-group">
    <%= f.label :nome, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :nome, :class => 'text_field' %>
    </div>
  </div>

  <div class="form-actions">
    <%= f.submit 'Salvar', :class => 'btn btn-primary' %>
    <%= link_to t('.cancel', :default => t("Voltar")),
                turmas_path, :class => 'btn' %>
  </div>
<% end %>
