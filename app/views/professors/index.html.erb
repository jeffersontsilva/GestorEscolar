<%- model_class = Professor -%>
<div class="page-header">
  <h3><%= "Professores Cadastrados" %></h3>
</div>
<table class="table table-striped">
  <thead>
    <tr>
      <th><%= model_class.human_attribute_name('Matricula') %></th>
      <th><%= model_class.human_attribute_name(:nome) %></th>
      <th><%= model_class.human_attribute_name(:cpf) %></th>
      <th><%=t '.actions', :default => t("Cadastro") %></th>
      <th><%=t '.actions', :default => t("Cadastro") %></th>
      <th><%=t '.actions', :default => t("Excluir") %></th>
    </tr>
  </thead>
  <tbody>
    <% @professors.each do |professor| %>
      <tr>
        <td><%= professor.id %></td>
        <td><%= professor.nome %></td>
        <td><%= professor.cpf %></td>
        <td>
          <%= link_to t('.edit', :default => t("Visualizar")),
                      professor, :class => 'btn btn-mini' %></td>
        <td>
          <%= link_to t('.edit', :default => t("Editar")),
                      edit_professor_path(professor), :class => 'btn btn-mini' %></td>
        <td>
          <%= link_to t('.destroy', :default => t("Excluir")),
                      professor_path(professor),
                      :method => :delete,
                      :data => { :confirm => t('.confirm', :default => t("Confirma exclusão do professor?", :default => 'Confirma exclusão do professor?')) },
                      :class => 'btn btn-mini btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to t('.new', :default => t("Novo Professor")),
            new_professor_path,
            :class => 'btn btn-success' %>
